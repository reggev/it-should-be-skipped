{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "maxNodeModuleJsDepth": 0
  },
  "include": ["lib/**/*.js", "test/**/*.js"],
  "exclude": ["node_modules"]
}
